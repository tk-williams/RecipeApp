                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:id="@+id/EditProfileCountryError"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="@string/SignUpCountryError"
