<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/EditProfileFirstNameError"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="@string/SignUpFirstNameError"
            android:textColor="@color/colorError"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/EditProfileFirstNameTag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/EditProfileFirstNameTag"
                android:textSize="20dp"
                android:layout_weight="2"/>

            <EditText
                android:id="@+id/EditProfileFirstNameEntry"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="20dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:id="@+id/EditProfileLastNameError"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="@string/SignUpLastNameError"
